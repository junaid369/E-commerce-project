</head>


<table id="datatable" class="display nowrap" style="width:100%">
    <thead>
        <tr>
            <th>USER</th>
            <th>Total orders</th>
            <th>Total products </th>
              <th>Cost </th>


        </tr>
    </thead>
    {{#each product}}
    <tbody>
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.totalOrders}}</td>
            <td>{{this.productsbuy}}</td>
               <td>{{this.spend}}</td>

        </tr>


    </tbody>
    {{/each}}
