<div class="brands">
 <a href="/admin/addnewbrands"> <button type="button" class="btn btn-primary"> Add new brands</button></a>
</div>


<div class="container " style="margin-top: 5rem;">

  <table class="table" id="admintable">
    <thead class="thead-dark">
      <tr>
 
        <th>Brand Name</th>
      
           <th>Description</th>
              <th>Logo</th>
            <th>Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each brand}}
      <tr>
 
        <td>{{this.brand}}</td>
          <td>{{this.description}}</td>
        <td>
          <img style="width: 50px; height: 50px;" src="/brand-images/{{this._id}}.jpg">
        </td>
      
        <td>
           <a href="/admin/brand-edit/{{this._id}}">  <button type="submit" class="btn btn-primary"> Edit</button></a>
          
               <a class="btn btn-danger" href="/admin/brand-delete/{{this._id}}" name="{{this.brand}}"
                        onclick="deleteBrand(event)"><i class="fas fa-trash-alt"></i></a>

  
        </td>
      </tr>
        {{/each}}
   
    </tbody>
  </table>
  
</div>
