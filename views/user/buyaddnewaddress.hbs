

<div class="container " style="margin-top: 7rem;">
	<h2 class="text-center">Add new address</h2>

<form action="/addNewBuyAddress" method="post" id="buyaddress"  >

				<div class="row" >
					<div class="col-md-6 mb-3" style="">
						<label for="firstName">First name</label>
						<input type="text" class="form" id="firstName" name="FirstName" style="width: 100%; height: 40px;" placeholder="" value="" required>
			
					</div>
					<div class="col-md-6 mb-3" >
						<label for="lastName">Last name</label>
						<input type="text" class="form" id="LastName" name="LastName" placeholder=""  style="width: 100%; height: 40px;" value="" required>
					
					</div>
				</div>
						
				<div class="row">
				<div class="mb-3  col-md-6" >
					<label for="House">House Name</label>
					<div class="input-group">
					
						<input type="text" class="form" id="House" name="House"  style="width: 100%; height: 40px;" placeholder="Username" required>
					
					</div>
				</div>

				<div class="mb-3 col-md-6">
					<label for="email">Street <span class="text-muted">(Optional)</span></label>
					<input type="text" class="form" id="Street" name="Street"  style="width: 100%; height: 40px;" placeholder="" required>
			
				</div>
				</div>
				<div class="row">
				<div class="mb-3 col-md-6">
					<label for="address">Town</label>
					<input type="text" class="form" id="Town" name="Town"   style="width: 100%; height: 40px;"placeholder="1234 Main St" required>
			
				</div>

			

				
				
					<div class="col-md-6 mb-3">
						<label for="">PIN</label>
						<input type="text" class="form" id="PIN" name="PIN"  oninput="this.value = this.value.replace(/[^0-9]/g, '').replace(/(\..*?)\..*/g, '$1');"  style="width: 100%; height: 40px;" placeholder="" required>
				
					
					</div>
				</div>
				<hr class="mb-4">
				
				

				<div class="d-block my-3">
					<div class="custom-control custom-radio">
						<input id="User" name="User" type="text" value="{{user._id}}" class="custom-control-input" hidden>
							
						
					</div>
				
				</div>
				
				<hr class="mb-4 ">
				<div>
	  <button type="submit" style="width: 100%;" class="btn btn-info " >Add</button>
				</div>
			
			
			</form>

                
</div>







