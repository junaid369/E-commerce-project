<div class="container " style="margin-top: 7rem;">

<form action="/addprofileAddress" method="post" id="profileaddress" class="needs-validation" novalidate>
				<div  class="row">
					<div class="col-md-6 mb-3" style="font-weight: 600;">
						<label for="firstName">First name</label>
						<input type="text" class="form-control" id="firstName" name="FirstName" placeholder="" value="" required>
			
					</div>
					<div class="col-md-6 mb-3" style="font-weight: 600;">
						<label for="lastName">Last name</label>
						<input type="text" class="form-control" id="LastName" name="LastName" placeholder="" value="" required>
			
					</div>
				</div>
					<div  class="row">
				<div class="mb-3 col-md-6" style="font-weight: 600;">
					<label for="House">House Name</label>
					<div class="input-group">
					
						<input type="text" class="form-control" id="House" name="House" placeholder="" required>
				
					</div>
				</div>

				<div class="mb-3" style="font-weight: 600;">
					<label for="email">Street <span class="text-muted">(Optional)</span></label>
					<input type="text" class="form-control" id="Street" name="Street" placeholder="">
		
				</div>
				</div>
				<div class="row" style="font-weight: 600;">
				<div class="mb-3 col-md-6">
					<label for="address">Town</label>
					<input type="text" class="form-control" id="Town" name="Town" placeholder="" required>
			
				</div>

			

				
					<div class="col-md-3 mb-3" style="font-weight: 600;">
						<label for="zip">PIN</label>
						<input type="number" class="form-control" id="PIN" name="PIN" placeholder="" required>
				
					</div>
		
				</div>
			
				
				

				<div class="d-block my-3" style="font-weight: 600;">
					<div class="custom-control custom-radio">
						<input id="User" name="User" type="text" value="{{user._id}}" class="custom-control-input" >
							
						
					</div>
				
				</div>
		
				<button  class="btn btn-danger btn-lg btn-block" type="submit">ADD </button>
			</form>

                
</div>