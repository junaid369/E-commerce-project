<div class="container  " style="margin-top: 10rem;">




  <div class="row">
    <div class="col-md-3 ">
      <div class="profile-sidebar">
        <div class="list-group ">
          <a href="/profile" class="list-group-item list-group-item-action ">PROFILE</a>
          <a href="/Orders" class="list-group-item list-group-item-action actived">My Orders</a>
          <a href="/change-password" class="list-group-item list-group-item-action">Change Password</a>
        </div>
      </div>
    </div>
    {{#each orders}}


    <div class="col-md-4">
      order id:{{this._id}}
      <div class="card">

        <div class="card-body">
          <h5 class="card-title">Delivery Address:</h5>
          <p class="card-text">{{this.deliveryDetails.FirstName}} {{this.deliveryDetails.LastName}} <br>
            {{this.deliveryDetails.House}} <br>
            {{this.deliveryDetails.Town}},{{this.deliveryDetails.PIN}} <br>
            {{this.deliveryDetails.Mobile}} <br></p>
          <h6>order Date</h6>
          <h6>{{this.date}}</h6>
          <h6>{{this.Time}}</h6>
          <a class="btn btn-danger mt-2" style="border-radius: 0%;" href="/singleOrder/{{this._id}}">View products</a>

          <div class=""> <small style="color: black;"> Order Status:
            </small><span style="color: black;"> {{this.Status}}</span></div>

          


              <h6>Total:{{this.Total}}</h6>
              <a class="btn btn-info mt-2" style="border-radius: 0%; margin-left: 170px;"
                href="/cancelled/{{this._id}}">Cancel</a>
       


        </div>
      </div>
    </div>
    {{/each}}
  </div>
  </div>
</div>